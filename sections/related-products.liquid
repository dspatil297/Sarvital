{% comment %}
  Related Products Section
{% endcomment %}

<section class="related-products">
  <div class="related-products__container">
    {% if section.settings.title != blank %}
      <h2 class="related-products__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.collection != blank %}
      {% assign related_collection = collections[section.settings.collection] %}
    {% else %}
      {% assign related_collection = collections.all %}
    {% endif %}
    
    {% if related_collection.products.size > 0 %}
      {% assign current_product_id = product.id %}
      {% assign limit_plus_one = section.settings.products_to_show | plus: 1 %}
      {% assign filtered_products = '' | split: '' %}
      
      {% for related_product in related_collection.products limit: limit_plus_one %}
        {% unless related_product.id == current_product_id %}
          {% assign filtered_products = filtered_products | push: related_product %}
        {% endunless %}
      {% endfor %}
      
      {% if filtered_products.size > 0 %}
        <div class="related-products__grid">
          {% for related_product in filtered_products limit: section.settings.products_to_show %}
            {% render 'product-card', product: related_product %}
          {% endfor %}
        </div>
      {% else %}
        <div class="related-products__empty">
          <p>No related products found.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="related-products__empty">
        <p>No products available.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .related-products {
    width: 100%;
    max-width: 100%;
    padding: var(--spacing-5xl) var(--spacing-lg);
    background: linear-gradient(135deg, rgba(74, 124, 44, 0.02) 0%, rgba(212, 175, 55, 0.02) 100%);
    box-sizing: border-box;
  }

  .related-products__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .related-products__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: clamp(36px, 4.5vw, 56px);
    font-weight: 900;
    background: linear-gradient(135deg, var(--forest-green) 0%, var(--sage-green) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-4xl);
    letter-spacing: -0.02em;
    line-height: 1.2;
    padding: 10px;
    margin-top: var(--spacing-2xl);
  }

  .related-products__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
  }

  .related-products__empty {
    text-align: center;
    padding: var(--spacing-4xl);
    color: #999;
    font-size: var(--body-large);
  }

  @media (max-width: 1200px) {
    .related-products__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .related-products__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 480px) {
    .related-products__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "You May Also Like"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select a collection to show related products from. Leave blank to use all products."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Related Products"
    }
  ]
}
{% endschema %}
