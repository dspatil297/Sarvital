<section class="collection-product-grid">
  <div class="collection-product-grid__container">
    {% paginate collection.products by section.settings.products_per_page %}
      {% if collection.products.size > 0 %}
        <div class="collection-product-grid__grid" id="product-grid">
          {% for product in collection.products %}
            {% render 'product-card', product: product %}
            {% render 'quick-view', product: product %}
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          {% render 'pagination', paginate: paginate %}
        {% endif %}
      {% else %}
        <div class="collection-product-grid__empty">
          <div class="empty-state">
            <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" class="empty-state__icon">
              <path d="M32 8L8 20V36C8 46 14.5 56 26 60C37.5 56 44 46 44 36V20L32 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M24 32L28 36L40 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <h2 class="empty-state__title">No products found</h2>
            <p class="empty-state__message">Try adjusting your filters to see more products.</p>
            <a href="{{ collection.url }}" class="btn btn-primary">Clear Filters</a>
          </div>
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .collection-product-grid {
    width: 100vw;
    max-width: 100vw;
    padding: var(--spacing-3xl) var(--spacing-lg);
    background-color: var(--bg);
  }

  .collection-product-grid__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .collection-product-grid__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
  }

  .collection-product-grid__empty {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    padding: var(--spacing-4xl);
  }

  .empty-state {
    text-align: center;
    max-width: 500px;
  }

  .empty-state__icon {
    width: 64px;
    height: 64px;
    color: rgba(26, 26, 26, 0.3);
    margin: 0 auto var(--spacing-lg);
  }

  .empty-state__title {
    font-family: var(--font-heading);
    font-size: var(--h3-size);
    font-weight: 700;
    color: var(--forest-green);
    margin-bottom: var(--spacing-md);
  }

  .empty-state__message {
    font-size: var(--body-large);
    color: rgba(26, 26, 26, 0.7);
    margin-bottom: var(--spacing-xl);
  }

  @media (max-width: 1024px) {
    .collection-product-grid__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .collection-product-grid {
      padding: var(--spacing-2xl) var(--spacing-md);
    }

    .collection-product-grid__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .collection-product-grid__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection Product Grid",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    }
  ]
}
{% endschema %}
