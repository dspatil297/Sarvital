{% comment %}
  Product Nutrition Information Section - Minimalist Design
{% endcomment %}

<section class="product-nutrition">
  <div class="product-nutrition__container">
    {% if section.settings.title != blank %}
      <h2 class="product-nutrition__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="product-nutrition__tabs">
      <button 
        type="button" 
        class="product-nutrition__tab active" 
        data-tab="nutrition"
        aria-selected="true"
      >
        Nutrition Facts
      </button>
      <button 
        type="button" 
        class="product-nutrition__tab" 
        data-tab="ingredients"
        aria-selected="false"
      >
        Ingredients
      </button>
      <button 
        type="button" 
        class="product-nutrition__tab" 
        data-tab="allergens"
        aria-selected="false"
      >
        Allergens
      </button>
    </div>
    
    <div class="product-nutrition__content">
      <div class="product-nutrition__panel active" data-panel="nutrition" aria-hidden="false">
        {% assign nutrition_data = product.metafields.custom.nutrition_facts %}
        {% if nutrition_data != blank %}
          <div class="nutrition-facts">
            <div class="nutrition-facts__header">
              <h3>Nutrition Facts</h3>
              {% assign serving_size = product.metafields.custom.serving_size | default: section.settings.serving_size %}
              {% if serving_size != blank %}
                <p class="nutrition-facts__serving">Serving Size: {{ serving_size }}</p>
              {% endif %}
            </div>
            {% comment %} Check if it's a list metafield (array) {% endcomment %}
            {% if nutrition_data.first %}
              <ul class="nutrition-facts__list" id="nutrition-facts-list">
                {% for item in nutrition_data %}
                  {% assign item_string = item | string %}
                  {% assign item_parts = item_string | split: ':' %}
                  {% if item_parts.size > 1 %}
                    <li class="nutrition-facts__item">
                      <span class="nutrition-facts__label">{{ item_parts.first | strip }}</span>
                      <span class="nutrition-facts__value">{{ item_parts.last | strip }}</span>
                    </li>
                  {% else %}
                    <li class="nutrition-facts__item">
                      <span class="nutrition-facts__label">{{ item_string | strip }}</span>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% else %}
              {% comment %} It's a JSON string or single value - use JavaScript to parse {% endcomment %}
              <ul class="nutrition-facts__list" data-nutrition-data="{{ nutrition_data | escape | replace: '"', '&quot;' }}" id="nutrition-facts-list">
                {% comment %} List items will be populated by JavaScript {% endcomment %}
              </ul>
            {% endif %}
          </div>
        {% else %}
          <div class="nutrition-facts">
            <div class="nutrition-facts__header">
              <h3>Nutrition Facts</h3>
              {% assign serving_size = product.metafields.custom.serving_size | default: section.settings.serving_size | default: "1 scoop (10g)" %}
              <p class="nutrition-facts__serving">Serving Size: {{ serving_size }}</p>
            </div>
            <ul class="nutrition-facts__list">
              {% assign calories = product.metafields.custom.calories | default: section.settings.calories %}
              {% if calories != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Calories</span>
                  <span class="nutrition-facts__value">{{ calories }}</span>
                </li>
              {% endif %}
              
              {% assign protein = product.metafields.custom.protein | default: section.settings.protein %}
              {% if protein != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Protein</span>
                  <span class="nutrition-facts__value">{{ protein }}{% unless protein contains 'g' %}g{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign carbs = product.metafields.custom.carbs | default: product.metafields.custom.carbohydrates | default: section.settings.carbs %}
              {% if carbs != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Total Carbohydrates</span>
                  <span class="nutrition-facts__value">{{ carbs }}{% unless carbs contains 'g' %}g{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign fiber = product.metafields.custom.fiber | default: product.metafields.custom.dietary_fiber | default: section.settings.fiber %}
              {% if fiber != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Dietary Fiber</span>
                  <span class="nutrition-facts__value">{{ fiber }}{% unless fiber contains 'g' %}g{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign fat = product.metafields.custom.fat | default: product.metafields.custom.total_fat | default: section.settings.fat %}
              {% if fat != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Total Fat</span>
                  <span class="nutrition-facts__value">{{ fat }}{% unless fat contains 'g' %}g{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign sugar = product.metafields.custom.sugar | default: product.metafields.custom.total_sugar %}
              {% if sugar != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Total Sugar</span>
                  <span class="nutrition-facts__value">{{ sugar }}{% unless sugar contains 'g' %}g{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign sodium = product.metafields.custom.sodium %}
              {% if sodium != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Sodium</span>
                  <span class="nutrition-facts__value">{{ sodium }}{% unless sodium contains 'mg' %}mg{% endunless %}</span>
                </li>
              {% endif %}
              
              {% assign vitamin_c = product.metafields.custom.vitamin_c %}
              {% if vitamin_c != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Vitamin C</span>
                  <span class="nutrition-facts__value">{{ vitamin_c }}</span>
                </li>
              {% endif %}
              
              {% assign iron = product.metafields.custom.iron %}
              {% if iron != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Iron</span>
                  <span class="nutrition-facts__value">{{ iron }}</span>
                </li>
              {% endif %}
              
              {% assign calcium = product.metafields.custom.calcium %}
              {% if calcium != blank %}
                <li class="nutrition-facts__item">
                  <span class="nutrition-facts__label">Calcium</span>
                  <span class="nutrition-facts__value">{{ calcium }}</span>
                </li>
              {% endif %}
            </ul>
          </div>
        {% endif %}
      </div>
      
      <div class="product-nutrition__panel" data-panel="ingredients" aria-hidden="true">
        {% assign ingredients = product.metafields.custom.ingredients %}
        {% if ingredients != blank %}
          <div class="ingredients-list">
            <h3>Ingredients</h3>
            <div class="ingredients-list__content">
              {% comment %} Check if it's a list metafield (array) {% endcomment %}
              {% if ingredients.first %}
                <ul class="ingredients-list__items">
                  {% for ingredient in ingredients %}
                    <li>{{ ingredient }}</li>
                  {% endfor %}
                </ul>
              {% else %}
                {% comment %} It's a string or rich text {% endcomment %}
                {{ ingredients }}
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="ingredients-list">
            <h3>Ingredients</h3>
            <p>100% pure fruit/vegetable powder. No additives, preservatives, or fillers.</p>
          </div>
        {% endif %}
      </div>
      
      <div class="product-nutrition__panel" data-panel="allergens" aria-hidden="true">
        {% assign allergen_info = product.metafields.custom.allergen_info | default: product.metafields.custom.allergens | default: section.settings.allergen_info %}
        {% if allergen_info != blank %}
          <div class="allergen-info">
            <h3>Allergen Information</h3>
            <div class="allergen-info__content">
              {{ allergen_info }}
            </div>
          </div>
        {% else %}
          <div class="allergen-info">
            <h3>Allergen Information</h3>
            <p>This product is free from common allergens. Processed in a facility that may handle nuts, dairy, and soy.</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .product-nutrition {
    width: 100%;
    max-width: 100%;
    padding: 100px 40px;
    background: var(--bg);
    box-sizing: border-box;
  }

  .product-nutrition__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-nutrition__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 42px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 50px;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .product-nutrition__tabs {
    display: flex;
    gap: 0;
    margin-bottom: 50px;
    border-bottom: 2px solid var(--border-color);
    justify-content: center;
    flex-wrap: wrap;
  }

  .product-nutrition__tab {
    padding: 18px 36px;
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    font-size: 16px;
    font-weight: 500;
    color: rgba(26, 26, 26, 0.6);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    bottom: -2px;
    font-family: var(--font-heading);
  }

  .product-nutrition__tab:hover {
    color: var(--forest-green);
    background: rgba(74, 124, 44, 0.03);
  }

  .product-nutrition__tab.active {
    color: var(--forest-green);
    border-bottom-color: var(--forest-green);
    font-weight: 600;
  }

  .product-nutrition__content {
    position: relative;
    min-height: 200px;
  }

  .product-nutrition__panel {
    display: none;
    animation: fadeIn 0.4s ease;
  }

  .product-nutrition__panel.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nutrition-facts,
  .ingredients-list,
  .allergen-info {
    background: var(--white);
    padding: 48px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .nutrition-facts__header {
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 2px solid var(--border-color);
  }

  .nutrition-facts__header h3 {
    font-family: var(--font-heading);
    font-size: 28px;
    color: var(--forest-green);
    margin-bottom: 12px;
    font-weight: 600;
  }

  .nutrition-facts__serving {
    font-size: 14px;
    color: rgba(26, 26, 26, 0.6);
    margin: 0;
    font-weight: 300;
  }

  .nutrition-facts__list {
    list-style: none;
    padding: 0;
    margin: 0;
    min-height: 100px;
  }

  .nutrition-facts__list:empty::before {
    content: 'Loading nutrition facts...';
    display: block;
    padding: 20px;
    text-align: center;
    color: rgba(26, 26, 26, 0.5);
    font-style: italic;
  }

  .nutrition-facts__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 0;
    border-bottom: 1px solid rgba(26, 26, 26, 0.08);
    transition: all 0.3s ease;
  }

  .nutrition-facts__item:hover {
    padding-left: 8px;
    background: rgba(74, 124, 44, 0.02);
    margin: 0 -8px;
    padding-right: 8px;
    border-radius: 6px;
  }

  .nutrition-facts__item:last-child {
    border-bottom: none;
  }

  .nutrition-facts__label {
    font-weight: 500;
    color: var(--text);
    font-size: 16px;
    flex: 1;
  }

  .nutrition-facts__value {
    font-weight: 700;
    color: var(--forest-green);
    font-size: 16px;
    margin-left: 20px;
    font-family: var(--font-heading);
  }

  .ingredients-list h3,
  .allergen-info h3 {
    font-family: var(--font-heading);
    font-size: 28px;
    color: var(--forest-green);
    margin-bottom: 24px;
    font-weight: 600;
  }

  .ingredients-list__content,
  .allergen-info__content {
    font-size: 16px;
    line-height: 1.8;
    color: rgba(26, 26, 26, 0.7);
    font-weight: 300;
  }

  .ingredients-list__items {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredients-list__items li {
    padding: 12px 0;
    border-bottom: 1px solid rgba(26, 26, 26, 0.08);
    position: relative;
    padding-left: 24px;
  }

  .ingredients-list__items li:last-child {
    border-bottom: none;
  }

  .ingredients-list__items li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--forest-green);
    font-weight: bold;
    font-size: 20px;
  }

  @media (max-width: 768px) {
    .product-nutrition {
      padding: 60px 20px;
    }

    .product-nutrition__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .product-nutrition__tabs {
      flex-direction: column;
      border-bottom: none;
      gap: 8px;
    }

    .product-nutrition__tab {
      border-bottom: 1px solid var(--border-color);
      border-left: 3px solid transparent;
      text-align: left;
      padding: 16px 24px;
    }

    .product-nutrition__tab.active {
      border-left-color: var(--forest-green);
      border-bottom-color: var(--border-color);
      background: rgba(74, 124, 44, 0.05);
    }

    .nutrition-facts,
    .ingredients-list,
    .allergen-info {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    function initNutritionFacts() {
      // Parse and render nutrition facts from JSON array
      const nutritionList = document.querySelector('.nutrition-facts__list[data-nutrition-data]');
      if (!nutritionList) {
        console.log('No nutrition list found with data attribute');
        return;
      }
      
      const nutritionData = nutritionList.getAttribute('data-nutrition-data');
      if (!nutritionData || nutritionData.trim() === '') {
        console.warn('No nutrition data found in attribute');
        nutritionList.innerHTML = '<li class="nutrition-facts__item"><span class="nutrition-facts__label">No nutrition data available</span></li>';
        return;
      }
      
      console.log('Nutrition data found:', nutritionData);
      
      try {
        // Unescape HTML entities
        let dataString = nutritionData.replace(/&quot;/g, '"').replace(/&#39;/g, "'").replace(/&amp;/g, '&');
        
        // Remove any leading/trailing whitespace
        dataString = dataString.trim();
        
        console.log('Parsing data string:', dataString);
        
        // Parse JSON array
        const nutritionArray = JSON.parse(dataString);
        
        console.log('Parsed array:', nutritionArray);
        
        if (Array.isArray(nutritionArray) && nutritionArray.length > 0) {
          nutritionList.innerHTML = ''; // Clear placeholder
          
          nutritionArray.forEach(function(item) {
            if (typeof item === 'string' && item.trim() !== '') {
              // Check if item contains ":" separator (Label: Value format)
              const colonIndex = item.indexOf(':');
              let label, value;
              
              if (colonIndex > -1) {
                label = item.substring(0, colonIndex).trim();
                value = item.substring(colonIndex + 1).trim();
              } else {
                // If no colon, treat entire string as label
                label = item.trim();
                value = '';
              }
              
              // Create list item
              const listItem = document.createElement('li');
              listItem.className = 'nutrition-facts__item';
              
              const labelSpan = document.createElement('span');
              labelSpan.className = 'nutrition-facts__label';
              labelSpan.textContent = label;
              
              listItem.appendChild(labelSpan);
              
              if (value) {
                const valueSpan = document.createElement('span');
                valueSpan.className = 'nutrition-facts__value';
                valueSpan.textContent = value;
                listItem.appendChild(valueSpan);
              }
              
              nutritionList.appendChild(listItem);
            }
          });
          
          console.log('Successfully rendered', nutritionArray.length, 'nutrition items');
        } else {
          console.warn('Nutrition data is not a valid array:', nutritionArray);
          nutritionList.innerHTML = '<li class="nutrition-facts__item"><span class="nutrition-facts__label">Invalid nutrition data format</span></li>';
        }
      } catch (e) {
        console.error('Error parsing nutrition facts:', e, 'Data:', nutritionData);
        // Fallback: try to display as plain text or split by comma
        nutritionList.innerHTML = '';
        let dataString = nutritionData.replace(/&quot;/g, '"').replace(/&#39;/g, "'");
        
        // Try to extract array items manually
        const match = dataString.match(/\[(.*?)\]/);
        if (match && match[1]) {
          const items = match[1].split(',').map(function(item) {
            return item.trim().replace(/^["']|["']$/g, '');
          });
          
          items.forEach(function(item) {
            if (item.trim() !== '') {
              const colonIndex = item.indexOf(':');
              let label, value;
              
              if (colonIndex > -1) {
                label = item.substring(0, colonIndex).trim();
                value = item.substring(colonIndex + 1).trim();
              } else {
                label = item.trim();
                value = '';
              }
              
              const listItem = document.createElement('li');
              listItem.className = 'nutrition-facts__item';
              
              const labelSpan = document.createElement('span');
              labelSpan.className = 'nutrition-facts__label';
              labelSpan.textContent = label;
              
              listItem.appendChild(labelSpan);
              
              if (value) {
                const valueSpan = document.createElement('span');
                valueSpan.className = 'nutrition-facts__value';
                valueSpan.textContent = value;
                listItem.appendChild(valueSpan);
              }
              
              nutritionList.appendChild(listItem);
            }
          });
        } else {
          // Last resort: show error message
          nutritionList.innerHTML = '<li class="nutrition-facts__item"><span class="nutrition-facts__label">Unable to parse nutrition data. Please check the metafield format.</span></li>';
        }
      }
    }
    
    // Tab functionality
    function initTabs() {
      const tabs = document.querySelectorAll('.product-nutrition__tab');
      const panels = document.querySelectorAll('.product-nutrition__panel');
      
      tabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.dataset.tab;
          
          tabs.forEach(t => {
            t.classList.remove('active');
            t.setAttribute('aria-selected', 'false');
          });
          this.classList.add('active');
          this.setAttribute('aria-selected', 'true');
          
          panels.forEach(panel => {
            panel.classList.remove('active');
            panel.setAttribute('aria-hidden', 'true');
            if (panel.dataset.panel === targetTab) {
              panel.classList.add('active');
              panel.setAttribute('aria-hidden', 'false');
            }
          });
        });
      });
    }
    
    // Initialize immediately and also on DOM ready
    function init() {
      initNutritionFacts();
      initTabs();
    }
    
    // Try multiple times to ensure it runs
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
    
    // Also try after a short delay in case the section loads dynamically
    setTimeout(init, 100);
    setTimeout(init, 500);
    setTimeout(init, 1000);
  })();
{% endjavascript %}

