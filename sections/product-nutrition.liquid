    .product-nutrition__tab.active {
      border-left-color: var(--forest-green);
      border-bottom-color: var(--border-color);
      background: rgba(74, 124, 44, 0.05);
    }

    .nutrition-facts,
    .ingredients-list {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    'use strict';
    
    // Parse and render nutrition facts from JSON array - optimized for speed
    function initNutritionFacts() {
      const nutritionList = document.getElementById('nutrition-facts-list');
      if (!nutritionList) {
        return;
      }
      
      // Check if it has data attribute (JSON string)
      const nutritionData = nutritionList.getAttribute('data-nutrition-data');
      if (!nutritionData || nutritionData.trim() === '') {
        return; // Already rendered server-side
      }
      
      try {
        // Unescape HTML entities and parse JSON
        let dataString = nutritionData
          .replace(/&quot;/g, '"')
          .replace(/&#39;/g, "'")
          .replace(/&amp;/g, '&')
          .trim();
        
        const nutritionArray = JSON.parse(dataString);
        
        if (Array.isArray(nutritionArray) && nutritionArray.length > 0) {
          // Use DocumentFragment for faster DOM manipulation
          const fragment = document.createDocumentFragment();
          
          nutritionArray.forEach(function(item) {
            if (typeof item === 'string' && item.trim() !== '') {
              const colonIndex = item.indexOf(':');
              let label, value;
              
              if (colonIndex > -1) {
                label = item.substring(0, colonIndex).trim();
                value = item.substring(colonIndex + 1).trim();
              } else {
                label = item.trim();
                value = '';
              }
              
              const listItem = document.createElement('li');
              listItem.className = 'nutrition-facts__item';
              
              const labelSpan = document.createElement('span');
              labelSpan.className = 'nutrition-facts__label';
              labelSpan.textContent = label;
              listItem.appendChild(labelSpan);
              
              if (value) {
                const valueSpan = document.createElement('span');
                valueSpan.className = 'nutrition-facts__value';
                valueSpan.textContent = value;
                listItem.appendChild(valueSpan);
              }
              
              fragment.appendChild(listItem);
            }
          });
          
          nutritionList.innerHTML = '';
          nutritionList.appendChild(fragment);
        }
      } catch (e) {
        // Try fallback parsing
        try {
          let dataString = nutritionData.replace(/&quot;/g, '"').replace(/&#39;/g, "'");
          const match = dataString.match(/\[(.*?)\]/);
          if (match && match[1]) {
            const items = match[1].split(',').map(function(item) {
              return item.trim().replace(/^["']|["']$/g, '');
            });
            
            const fragment = document.createDocumentFragment();
            items.forEach(function(item) {
              if (item.trim() !== '') {
                const colonIndex = item.indexOf(':');
                let label = colonIndex > -1 ? item.substring(0, colonIndex).trim() : item.trim();
                let value = colonIndex > -1 ? item.substring(colonIndex + 1).trim() : '';
                
                const listItem = document.createElement('li');
                listItem.className = 'nutrition-facts__item';
                
                const labelSpan = document.createElement('span');
                labelSpan.className = 'nutrition-facts__label';
                labelSpan.textContent = label;
                listItem.appendChild(labelSpan);
                
                if (value) {
                  const valueSpan = document.createElement('span');
                  valueSpan.className = 'nutrition-facts__value';
                  valueSpan.textContent = value;
                  listItem.appendChild(valueSpan);
                }
                
                fragment.appendChild(listItem);
              }
            });
            
            nutritionList.innerHTML = '';
            nutritionList.appendChild(fragment);
          }
        } catch (fallbackError) {
          // Error already handled, keep loading message
        }
      }
    }
    
    // Tab functionality - simplified and faster
    function initTabs() {
      const tabs = document.querySelectorAll('.product-nutrition__tab');
      const panels = document.querySelectorAll('.product-nutrition__panel');
      
      if (tabs.length === 0 || panels.length === 0) {
        return;
      }
      
      // Remove existing listeners to prevent duplicates
      tabs.forEach(function(tab) {
        const newTab = tab.cloneNode(true);
        tab.parentNode.replaceChild(newTab, tab);
      });
      
      // Get fresh references after cloning
      const freshTabs = document.querySelectorAll('.product-nutrition__tab');
      const freshPanels = document.querySelectorAll('.product-nutrition__panel');
      
      freshTabs.forEach(function(tab) {
        tab.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const targetTab = this.getAttribute('data-tab');
          
          // Update all tabs
          freshTabs.forEach(function(t) {
            t.classList.remove('active');
            t.setAttribute('aria-selected', 'false');
          });
          this.classList.add('active');
          this.setAttribute('aria-selected', 'true');
          
          // Update all panels
          freshPanels.forEach(function(panel) {
            const panelTab = panel.getAttribute('data-panel');
            
            if (panelTab === targetTab) {
              // Show this panel - use class only, let CSS handle display
              panel.classList.add('active');
              panel.setAttribute('aria-hidden', 'false');
              panel.removeAttribute('style'); // Remove any inline styles
            } else {
              // Hide other panels
              panel.classList.remove('active');
              panel.setAttribute('aria-hidden', 'true');
              panel.removeAttribute('style'); // Remove any inline styles
            }
          });
        });
      });
    }
    
    // Initialize function
    function init() {
      initNutritionFacts();
      initTabs();
    }
    
    // Run initialization immediately
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      // DOM already loaded, run immediately
      init();
    }
    
    // Also run once more after a short delay for dynamically loaded content
    setTimeout(function() {
      initTabs(); // Re-initialize tabs in case they weren't found initially
    }, 50);
  })();
{% endjavascript %}

