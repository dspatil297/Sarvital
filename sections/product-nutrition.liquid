    background: var(--white);
    padding: 32px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .nutrition-facts__header {
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid var(--border-color);
  }

  .nutrition-facts__header h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    color: var(--forest-green);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .nutrition-facts__serving {
    font-size: 14px;
    color: rgba(26, 26, 26, 0.6);
    margin: 0;
    font-weight: 300;
  }

  .nutrition-facts__list {
    list-style: none;
    padding: 0;
    margin: 0;
    min-height: 50px;
  }

  .nutrition-facts__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14px 0;
    border-bottom: 1px solid rgba(26, 26, 26, 0.08);
    transition: all 0.3s ease;
  }

  .nutrition-facts__item:hover {
    padding-left: 8px;
    background: rgba(74, 124, 44, 0.02);
    margin: 0 -8px;
    padding-right: 8px;
    border-radius: 6px;
  }

  .nutrition-facts__item:last-child {
    border-bottom: none;
  }

  .nutrition-facts__loading {
    opacity: 0.6;
    font-style: italic;
  }

  .nutrition-facts__label {
    font-weight: 500;
    color: var(--text);
    font-size: 15px;
    flex: 1;
  }

  .nutrition-facts__value {
    font-weight: 700;
    color: var(--forest-green);
    font-size: 15px;
    margin-left: 20px;
    font-family: var(--font-heading);
  }

  .ingredients-list h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    color: var(--forest-green);
    margin-bottom: 20px;
    font-weight: 600;
  }

  .ingredients-list__content {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(26, 26, 26, 0.7);
    font-weight: 300;
  }

  .ingredients-list__items {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredients-list__items li {
    padding: 10px 0;
    border-bottom: 1px solid rgba(26, 26, 26, 0.08);
    position: relative;
    padding-left: 24px;
  }

  .ingredients-list__items li:last-child {
    border-bottom: none;
  }

