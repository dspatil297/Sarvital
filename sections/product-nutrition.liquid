{% comment %}
  Product Nutrition Information Section
  Displays nutrition facts and ingredients from metafields
{% endcomment %}

<section class="product-nutrition">
  <div class="product-nutrition__container">
    {% if section.settings.title != blank %}
      <h2 class="product-nutrition__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="product-nutrition__tabs">
      <button 
        type="button" 
        class="product-nutrition__tab active" 
        data-tab="nutrition"
        aria-selected="true"
      >
        Nutrition Facts
      </button>
      <button 
        type="button" 
        class="product-nutrition__tab" 
        data-tab="ingredients"
        aria-selected="false"
      >
        Ingredients
      </button>
    </div>
    
    <div class="product-nutrition__content">
      <!-- Nutrition Facts Panel -->
      <div class="product-nutrition__panel active" data-panel="nutrition" id="nutrition-panel">
        {% assign nutrition_data = product.metafields.custom.nutrition_facts %}
        {% comment %} Debug: Uncomment to see metafield data {% endcomment %}
        {% comment %}
        <div style="background: #f0f0f0; padding: 10px; margin-bottom: 20px; font-size: 12px;">
          <strong>Debug Info:</strong><br>
          Metafield exists: {{ nutrition_data | json }}<br>
          Type: {{ nutrition_data | type }}<br>
          First item: {{ nutrition_data.first | json }}
        </div>
        {% endcomment %}
        <div class="nutrition-facts">
          <div class="nutrition-facts__header">
            <h3>Nutrition Facts</h3>
            {% assign serving_size = product.metafields.custom.serving_size | default: section.settings.serving_size %}
            {% if serving_size != blank %}
              <p class="nutrition-facts__serving">Serving Size: {{ serving_size }}</p>
            {% endif %}
          </div>
          
          {% if nutrition_data != blank %}
            {% comment %} Try different metafield formats {% endcomment %}
            {% if nutrition_data.first %}
              {% comment %} It's a list metafield (array) {% endcomment %}
              <ul class="nutrition-facts__list" id="nutrition-facts-list">
                {% for item in nutrition_data %}
                  {% assign item_string = item | string %}
                  {% assign item_parts = item_string | split: ':' %}
                  {% if item_parts.size > 1 %}
                    <li class="nutrition-facts__item">
                      <span class="nutrition-facts__label">{{ item_parts.first | strip }}</span>
                      <span class="nutrition-facts__value">{{ item_parts.last | strip }}</span>
                    </li>
                  {% else %}
                    <li class="nutrition-facts__item">
                      <span class="nutrition-facts__label">{{ item_string | strip }}</span>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% elsif nutrition_data contains '[' or nutrition_data contains ']' %}
              {% comment %} It's a JSON string {% endcomment %}
              <ul class="nutrition-facts__list" id="nutrition-facts-list" data-nutrition-data="{{ nutrition_data | escape }}">
                <li class="nutrition-facts__item nutrition-facts__loading">
                  <span class="nutrition-facts__label">Loading nutrition facts...</span>
                </li>
              </ul>
            {% else %}
              {% comment %} It's a plain string - try to split by newlines or commas {% endcomment %}
              <ul class="nutrition-facts__list" id="nutrition-facts-list">
                {% assign items = nutrition_data | split: '\n' %}
                {% if items.size == 1 %}
                  {% assign items = nutrition_data | split: ',' %}
                {% endif %}
                {% for item in items %}
                  {% assign item_string = item | string | strip %}
                  {% if item_string != blank %}
                    {% assign item_parts = item_string | split: ':' %}
                    {% if item_parts.size > 1 %}
                      <li class="nutrition-facts__item">
                        <span class="nutrition-facts__label">{{ item_parts.first | strip }}</span>
                        <span class="nutrition-facts__value">{{ item_parts.last | strip }}</span>
                      </li>
                    {% else %}
                      <li class="nutrition-facts__item">
                        <span class="nutrition-facts__label">{{ item_string }}</span>
                      </li>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          {% else %}
            {% comment %} No metafield data - show helpful message {% endcomment %}
            <ul class="nutrition-facts__list" id="nutrition-facts-list">
              <li class="nutrition-facts__item">
                <span class="nutrition-facts__label" style="color: rgba(26, 26, 26, 0.6); font-style: italic;">
                  No nutrition facts available. Please add nutrition data in product metafields.<br>
                  <small style="font-size: 12px; margin-top: 8px; display: block;">Metafield: custom.nutrition_facts (List or JSON string)</small>
                </span>
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
      
      <!-- Ingredients Panel -->
      <div class="product-nutrition__panel" data-panel="ingredients" id="ingredients-panel">
        {% assign ingredients = product.metafields.custom.ingredients %}
        <div class="ingredients-list">
          <h3>Ingredients</h3>
          {% if ingredients != blank %}
            <div class="ingredients-list__content">
              {% comment %} Check if it's a list metafield (array) {% endcomment %}
              {% if ingredients.first %}
                <ul class="ingredients-list__items">
                  {% for ingredient in ingredients %}
                    <li>{{ ingredient }}</li>
                  {% endfor %}
                </ul>
              {% else %}
                {% comment %} It's a string or rich text {% endcomment %}
                {{ ingredients }}
              {% endif %}
            </div>
          {% else %}
            <p style="color: rgba(26, 26, 26, 0.6); font-style: italic;">
              No ingredients information available. Please add ingredients in product metafields.<br>
              <small style="font-size: 12px; margin-top: 8px; display: block;">Metafield: custom.ingredients (List or Text)</small>
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

