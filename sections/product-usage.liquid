{% comment %}
  Product Usage Instructions Section - Minimalist Design
{% endcomment %}

<section class="product-usage">
  <div class="product-usage__container">
    {% if section.settings.title != blank %}
      <h2 class="product-usage__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="product-usage__content">
      {% if section.blocks.size > 0 %}
        <div class="usage-suggestions">
          <div class="usage-suggestions__grid">
            {% for block in section.blocks %}
              <div class="usage-suggestion" {{ block.shopify_attributes }}>
                {% if block.settings.icon_name != blank %}
                  <div class="usage-suggestion__icon">
                    {% render 'icon', name: block.settings.icon_name %}
                  </div>
                {% endif %}
                
                {% if block.settings.title != blank %}
                  <h4 class="usage-suggestion__title">{{ block.settings.title }}</h4>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="usage-suggestion__description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.how_to_use != blank %}
        <div class="usage-instructions">
          <h3>How to Use</h3>
          <div class="usage-instructions__content">
            {{ section.settings.how_to_use }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .product-usage {
    width: 100%;
    max-width: 100%;
    padding: 80px var(--spacing-lg);
    background: var(--bg);
    box-sizing: border-box;
  }

  .product-usage__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-usage__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 300;
    color: var(--text);
    margin-bottom: 60px;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .product-usage__content {
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .usage-suggestions__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .usage-suggestion {
    text-align: center;
    padding: 32px 24px;
    background: var(--white);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .usage-suggestion:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(45, 80, 22, 0.1);
    border-color: var(--sage-green);
  }

  .usage-suggestion__icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(74, 124, 44, 0.08);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .usage-suggestion__icon svg {
    width: 24px;
    height: 24px;
    color: var(--forest-green);
  }

  .usage-suggestion:hover .usage-suggestion__icon {
    background: var(--forest-green);
  }

  .usage-suggestion:hover .usage-suggestion__icon svg {
    color: var(--white);
  }

  .usage-suggestion__title {
    font-family: var(--font-heading);
    font-size: 18px;
    font-weight: 600;
    color: var(--forest-green);
    margin-bottom: 10px;
  }

  .usage-suggestion__description {
    font-size: 14px;
    color: rgba(26, 26, 26, 0.65);
    line-height: 1.6;
    margin: 0;
    font-weight: 300;
  }

  .usage-instructions {
    background: var(--white);
    padding: 40px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .usage-instructions h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    color: var(--forest-green);
    margin-bottom: 20px;
    font-weight: 600;
  }

  .usage-instructions__content {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(26, 26, 26, 0.65);
    font-weight: 300;
  }

  .usage-instructions__content ul,
  .usage-instructions__content ol {
    margin-left: 24px;
    margin-top: 16px;
  }

  .usage-instructions__content li {
    margin-bottom: 12px;
  }

  @media (max-width: 968px) {
    .usage-suggestions__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .product-usage {
      padding: 60px var(--spacing-md);
    }

    .product-usage__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .usage-suggestions__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .usage-instructions {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Usage",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How to Use"
    },
    {
      "type": "richtext",
      "id": "how_to_use",
      "label": "How to Use Instructions"
    }
  ],
  "blocks": [
    {
      "type": "suggestion",
      "name": "Serving Suggestion",
      "settings": [
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            {
              "value": "smoothie",
              "label": "Smoothie"
            },
            {
              "value": "cooking",
              "label": "Cooking"
            },
            {
              "value": "wellness",
              "label": "Wellness"
            },
            {
              "value": "workout",
              "label": "Workout"
            }
          ],
          "default": "smoothie"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Serving Suggestion"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Add to your favorite smoothie or recipe."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Usage"
    }
  ]
}
{% endschema %}
