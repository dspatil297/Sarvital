{% comment %}
  Product Main Section - Olive Oil Style Design
  Clean, minimalist design with cream background and light typography
{% endcomment %}

<section class="product-hero">
  <div class="product-hero__container">
    <!-- Left Column - Content -->
    <div class="product-content">
      <!-- Small Badge -->
      <div class="product-badge">
        {% if product.metafields.custom.badge_text %}
          {{ product.metafields.custom.badge_text }}
        {% else %}
          100% Authentic
        {% endif %}
      </div>
      
      <!-- Main Headline -->
      <h1 class="product-title">
        {% assign title_words = product.title | split: ' ' %}
        {% assign first_half = title_words.size | divided_by: 2 | floor %}
        <span class="product-title__main">
          {% for word in title_words limit: first_half %}
            {{ word }}{% unless forloop.last %} {% endunless %}
          {% endfor %}
        </span>
        <span class="product-title__highlight">
          {% for word in title_words offset: first_half %}
            {{ word }}{% unless forloop.last %} {% endunless %}
          {% endfor %}
        </span>
      </h1>
      
      <!-- Description -->
      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description }}
        </div>
      {% endif %}
      
      <!-- Price Display -->
      <div class="product-price-display">
        {% if product.compare_at_price > product.price %}
          <div class="product-price-display__original">
            <span class="price-label">Original:</span>
            <span class="price-value price-value--strikethrough">{{ product.compare_at_price | money }}</span>
          </div>
          <div class="product-price-display__sale">
            <span class="price-label">Sale:</span>
            <span class="price-value price-value--sale">{{ product.price | money }}</span>
          </div>
        {% else %}
          <div class="product-price-display__current">
            <span class="price-value">{{ product.price | money }}</span>
          </div>
        {% endif %}
      </div>
      
      <!-- CTA Section -->
      {% form 'product', product, class: 'product-form', id: 'product-form' %}
        <div class="product-cta">
          <button 
            type="submit" 
            name="add" 
            class="cta-button"
            {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}
          >
            {% if product.selected_or_first_available_variant.available %}
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
          
          {% if product.variants.size > 1 %}
            <div class="size-selector">
              <label for="product-variant-select" class="size-label">Size</label>
              <select 
                name="id" 
                id="product-variant-select" 
                class="size-select"
                data-variant-select
              >
                {% for variant in product.variants %}
                  <option 
                    value="{{ variant.id }}"
                    {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                    {% unless variant.available %}disabled{% endunless %}
                    data-price="{{ variant.price }}"
                    data-compare-price="{{ variant.compare_at_price }}"
                  >
                    {{ variant.title }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% else %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          {% endif %}
        </div>
        
        <input type="hidden" name="quantity" value="1">
      {% endform %}
      
      <!-- Product Specifications -->
      <div class="product-specs">
        <div class="spec-item">
          <h4 class="spec-title">Certificates</h4>
          <p class="spec-text">
            {% if product.metafields.custom.certificates %}
              {{ product.metafields.custom.certificates }}
            {% else %}
              100% ISO Certified
            {% endif %}
          </p>
        </div>
        <div class="spec-item">
          <h4 class="spec-title">Ingredients</h4>
          <p class="spec-text">
            {% if product.metafields.custom.ingredients %}
              {{ product.metafields.custom.ingredients }}
            {% else %}
              Natural, Organic Ingredients
            {% endif %}
          </p>
        </div>
        <div class="spec-item">
          <h4 class="spec-title">Variations</h4>
          <p class="spec-text">
            {% if product.variants.size > 1 %}
              {{ product.variants.size }} Options Available
            {% else %}
              Standard Size
            {% endif %}
          </p>
        </div>
      </div>
    </div>
    
    <!-- Right Column - Product Image -->
    <div class="product-image-wrapper">
      {% if product.featured_image %}
        <div class="product-image-container">
          <img 
            src="{{ product.featured_image | image_url: width: 2000 }}" 
            alt="{{ product.featured_image.alt | default: product.title }}"
            class="product-image"
            loading="eager"
            width="2000"
            height="2000"
          >
          
          <!-- Circular Price Badge -->
          <div class="price-badge">
            {% if product.compare_at_price > product.price %}
              <span class="price-badge__label">Sale</span>
              <span class="price-badge__currency">{{ cart.currency.symbol }}</span>
              <span class="price-badge__amount">{{ product.price | money_without_currency }}</span>
            {% else %}
              <span class="price-badge__currency">{{ cart.currency.symbol }}</span>
              <span class="price-badge__amount">{{ product.price | money_without_currency }}</span>
            {% endif %}
          </div>
        </div>
      {% else %}
        <div class="product-image-placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  /* Main Product Hero Section */
  .product-hero {
    width: 100%;
    max-width: 100%;
    padding: 100px 40px;
    background: var(--bg);
    box-sizing: border-box;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .product-hero__container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    width: 100%;
  }

  /* Content Area */
  .product-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 600px;
  }

  /* Small Badge */
  .product-badge {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 30px;
    color: var(--text);
    font-weight: 500;
  }

  /* Main Title */
  .product-title {
    font-size: 56px;
    line-height: 1.1;
    font-weight: 300;
    margin: 0 0 30px 0;
    color: var(--text);
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .product-title__main {
    display: block;
    font-weight: 300;
  }

  .product-title__highlight {
    display: block;
    color: var(--gold);
    font-weight: 600;
  }

  /* Description */
  .product-description {
    font-size: 16px;
    line-height: 1.6;
    color: rgba(26, 26, 26, 0.65);
    margin-bottom: 40px;
    font-weight: 300;
  }

  .product-description p {
    margin: 0 0 16px 0;
  }

  .product-description p:last-child {
    margin-bottom: 0;
  }

  /* Price Display */
  .product-price-display {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 40px;
  }

  .product-price-display__original,
  .product-price-display__sale,
  .product-price-display__current {
    display: flex;
    align-items: baseline;
    gap: 12px;
  }

  .price-label {
    font-size: 14px;
    color: rgba(26, 26, 26, 0.6);
    font-weight: 400;
  }

  .price-value {
    font-size: 24px;
    font-weight: 600;
    color: var(--forest-green);
    font-family: var(--font-heading);
  }

  .price-value--strikethrough {
    text-decoration: line-through;
    color: rgba(26, 26, 26, 0.4);
    font-size: 20px;
    font-weight: 400;
  }

  .price-value--sale {
    color: var(--gold);
    font-size: 28px;
    font-weight: 700;
  }

  /* CTA Section */
  .product-cta {
    display: flex;
    flex-direction: row;
    gap: 16px;
    align-items: flex-end;
    margin-bottom: 60px;
  }

  .cta-button {
    flex: 1;
    background: var(--forest-green);
    color: var(--white);
    padding: 16px 48px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: none;
    letter-spacing: 0;
  }

  .cta-button:hover {
    background: var(--sage-green);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(45, 80, 22, 0.3);
  }

  .cta-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Size Selector */
  .size-selector {
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-width: 140px;
  }

  .size-label {
    font-size: 14px;
    font-weight: 500;
    color: var(--text);
  }

  .size-select {
    padding: 12px 40px 12px 20px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background: var(--white);
    color: var(--text);
    font-size: 14px;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.3s ease;
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L5 5L9 1' stroke='%231a1a1a' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 14px center;
    background-size: 10px;
  }

  .size-select:hover {
    border-color: var(--sage-green);
  }

  .size-select:focus {
    outline: none;
    border-color: var(--sage-green);
    box-shadow: 0 0 0 3px rgba(74, 124, 44, 0.1);
  }

  /* Product Specifications */
  .product-specs {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    padding-top: 60px;
    border-top: 1px solid var(--border-color);
    margin-top: 60px;
  }

  .spec-item {
    text-align: left;
  }

  .spec-title {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: var(--forest-green);
  }

  .spec-text {
    font-size: 13px;
    color: rgba(26, 26, 26, 0.65);
    margin: 0;
    line-height: 1.6;
    font-weight: 300;
  }

  /* Image Area */
  .product-image-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .product-image-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    width: 100%;
    height: auto;
    max-height: 80vh;
    object-fit: contain;
    transition: transform 0.4s ease;
  }

  .product-image:hover {
    transform: scale(1.05);
  }

  /* Circular Price Badge */
  .price-badge {
    position: absolute;
    top: 10%;
    right: 10%;
    width: 100px;
    height: 100px;
    background: var(--gold);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
    z-index: 2;
    padding: 10px;
    box-sizing: border-box;
  }

  .price-badge__label {
    font-size: 9px;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 3px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.9;
  }

  .price-badge__currency {
    font-size: 11px;
    font-weight: 600;
    line-height: 1;
    margin-bottom: 1px;
  }

  .price-badge__amount {
    font-size: 16px;
    font-weight: 700;
    line-height: 1;
  }

  .product-image-placeholder {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 8px;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .product-hero {
      padding: 60px 20px;
      min-height: auto;
    }

    .product-hero__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .product-title {
      font-size: 40px;
    }

    .product-specs {
      grid-template-columns: 1fr;
      gap: 20px;
      padding-top: 40px;
      margin-top: 40px;
    }

    .product-cta {
      flex-direction: column;
      align-items: stretch;
    }

    .size-selector {
      min-width: 100%;
    }

    .price-badge {
      display: none;
    }

    .product-price-display {
      margin-bottom: 30px;
    }

    .price-value {
      font-size: 20px;
    }

    .price-value--sale {
      font-size: 24px;
    }
  }

  @media (max-width: 480px) {
    .product-hero {
      padding: 40px 16px;
    }

    .product-title {
      font-size: 32px;
    }

    .product-description {
      font-size: 14px;
    }
  }
{% endstylesheet %}

{% javascript %}
  // Variant selector functionality
  document.addEventListener('DOMContentLoaded', function() {
    const variantSelect = document.getElementById('product-variant-select');
    if (variantSelect) {
      variantSelect.addEventListener('change', function() {
        // Update price badge and price display if variant changes
        const selectedOption = this.options[this.selectedIndex];
        const price = selectedOption.getAttribute('data-price');
        const comparePrice = selectedOption.getAttribute('data-compare-price');
        
        // Update price badge
        const priceBadge = document.querySelector('.price-badge__amount');
        if (priceBadge && price) {
          const priceValue = (parseInt(price) / 100).toFixed(2);
          priceBadge.textContent = priceValue;
        }
        
        // Update price display
        const priceDisplay = document.querySelector('.product-price-display');
        if (priceDisplay && price) {
          const salePrice = (parseInt(price) / 100).toFixed(2);
          const originalPrice = comparePrice ? (parseInt(comparePrice) / 100).toFixed(2) : null;
          
          if (originalPrice && parseInt(comparePrice) > parseInt(price)) {
            // Show both prices
            priceDisplay.innerHTML = `
              <div class="product-price-display__original">
                <span class="price-label">Original:</span>
                <span class="price-value price-value--strikethrough">${originalPrice}</span>
              </div>
              <div class="product-price-display__sale">
                <span class="price-label">Sale:</span>
                <span class="price-value price-value--sale">${salePrice}</span>
              </div>
            `;
          } else {
            // Show only current price
            priceDisplay.innerHTML = `
              <div class="product-price-display__current">
                <span class="price-value">${salePrice}</span>
              </div>
            `;
          }
        }
      });
    }
  });
{% endjavascript %}

