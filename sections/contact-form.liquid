      "type": "checkbox",
      "id": "show_phone",
      "label": "Show Phone Field",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_subject",
      "label": "Show Subject Dropdown",
      "default": true
    },
    {
      "type": "text",
      "id": "subject_options",
      "label": "Subject Options",
      "default": "General Inquiry, Product Question, Order Support, Partnership",
      "info": "Comma-separated list"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}

