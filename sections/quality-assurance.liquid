          }
        },
        {
          "type": "badge",
          "settings": {
            "icon_name": "premium",
            "title": "Premium Quality",
            "description": "Rigorous quality control ensures consistent premium standards."
          }
        }
      ]
    }
  ]
}
{% endschema %}
