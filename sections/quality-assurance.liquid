        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Every batch is tested in certified laboratories for purity and quality."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quality Assurance",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon_name": "lab-test",
            "title": "Lab Tested",
            "description": "Every batch is tested in certified laboratories for purity and quality."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon_name": "certified",
