{% stylesheet %}
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .product-benefits-compact {
    width: 100%;
    max-width: 100%;
    padding: 30px 40px;
    background: linear-gradient(180deg, var(--white) 0%, rgba(250, 250, 250, 0.5) 100%);
    box-sizing: border-box;
  }

  .product-benefits-compact__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .benefit-card {
    text-align: center;
    padding: 28px 24px;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.95) 0%, rgba(250, 250, 250, 0.8) 100%);
    border-radius: 16px;
    border: 1px solid rgba(74, 124, 44, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(74, 124, 44, 0.05), transparent);
    transition: left 0.5s ease;
  }

  .benefit-card:hover::before {
    left: 100%;
  }

  .benefit-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(45, 80, 22, 0.15);
    border-color: rgba(74, 124, 44, 0.25);
  }

  .benefit-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--forest-green) 0%, var(--sage-green) 100%);
    border-radius: 16px;
    color: var(--white);
  }

  .benefit-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 8px 0;
    font-family: var(--font-heading);
  }

  .benefit-text {
    font-size: 14px;
    line-height: 1.6;
    color: rgba(26, 26, 26, 0.7);
    margin: 0;
  }

  /* Tablet and mobile - 2x2 grid for optimal conversion */
  @media (max-width: 968px) {
    .product-benefits-compact {
      padding: 30px 20px;
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .benefit-card {
      padding: 24px 20px;
    }
  }

  /* Mobile optimization - keep 2x2 grid, adjust sizing */
  @media (max-width: 768px) {
    .product-benefits-compact {
      padding: 24px 16px;
      background: var(--white);
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .benefit-card {
      padding: 20px 12px;
      border-radius: 12px;
      border: 1.5px solid rgba(74, 124, 44, 0.15);
      box-shadow: 0 2px 12px rgba(45, 80, 22, 0.06);
      min-height: 120px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .benefit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--forest-green), var(--sage-green));
      border-radius: 12px 12px 0 0;
    }

    .benefit-card:active {
      transform: scale(0.98);
      box-shadow: 0 1px 6px rgba(45, 80, 22, 0.08);
    }

    .benefit-icon {
      width: 44px;
      height: 44px;
      margin-bottom: 12px;
      border-radius: 10px;
      padding: 8px;
      background: linear-gradient(135deg, rgba(74, 124, 44, 0.12), rgba(74, 124, 44, 0.06));
    }

    .benefit-icon svg {
      color: var(--forest-green);
    }

    .benefit-title {
      font-size: 14px;
      font-weight: 700;
      margin-bottom: 6px;
      line-height: 1.3;
    }

    .benefit-text {
      font-size: 12px;
      line-height: 1.5;
      color: rgba(26, 26, 26, 0.7);
    }
  }

  /* Extra small screens - maintain 2x2, just reduce sizing */
  @media (max-width: 360px) {
    .benefit-card {
      padding: 16px 10px;
      min-height: 110px;
      gap: 8px;
    }

    .benefit-icon {
      width: 38px;
      height: 38px;
      margin-bottom: 10px;
    }

    .benefit-title {
      font-size: 13px;
    }

    .benefit-text {
      font-size: 11px;
    }
  }
{% endstylesheet %}

