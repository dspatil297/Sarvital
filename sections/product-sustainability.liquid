  "name": "Product Sustainability",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Sustainability & Impact"
    },
    {
      "type": "richtext",
      "id": "farmer_story",
      "label": "Farmer Partnership Story"
    },
    {
      "type": "richtext",
      "id": "environmental_impact",
      "label": "Environmental Impact Information"
    },
    {
      "type": "richtext",
      "id": "packaging_info",
      "label": "Packaging Information"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Sustainability Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            {
              "value": "sustainable",
              "label": "Sustainable"
            },
            {
              "value": "farmer",
              "label": "Farmer"
            },
            {
              "value": "recycle",
              "label": "Recycle"
            },
            {
              "value": "globe",
              "label": "Globe"
            }
          ],
          "default": "sustainable"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sustainable"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Eco-friendly and sustainable practices."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Sustainability"
    }
  ]
}
{% endschema %}
