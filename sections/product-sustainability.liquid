{% comment %}
  Product Sustainability Information Section - Minimalist Design
{% endcomment %}

<section class="product-sustainability">
  <div class="product-sustainability__container">
    {% if section.settings.title != blank %}
      <h2 class="product-sustainability__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="product-sustainability__content">
      {% if section.settings.farmer_story != blank %}
        <div class="sustainability-story">
          <h3>Farmer Partnership</h3>
          <div class="sustainability-story__content">
            {{ section.settings.farmer_story }}
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.environmental_impact != blank %}
        <div class="environmental-impact">
          <h3>Environmental Impact</h3>
          <div class="environmental-impact__content">
            {{ section.settings.environmental_impact }}
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.packaging_info != blank %}
        <div class="packaging-info">
          <h3>Eco-Friendly Packaging</h3>
          <div class="packaging-info__content">
            {{ section.settings.packaging_info }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .product-sustainability {
    width: 100%;
    max-width: 100%;
    padding: 80px var(--spacing-lg);
    background: var(--bg);
    box-sizing: border-box;
  }

  .product-sustainability__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-sustainability__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 300;
    color: var(--text);
    margin-bottom: 60px;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .product-sustainability__content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .sustainability-story,
  .environmental-impact,
  .packaging-info {
    background: var(--white);
    padding: 40px 30px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .sustainability-story h3,
  .environmental-impact h3,
  .packaging-info h3 {
    font-family: var(--font-heading);
    font-size: 22px;
    color: var(--forest-green);
    margin-bottom: 20px;
    font-weight: 600;
  }

  .sustainability-story__content,
  .environmental-impact__content,
  .packaging-info__content {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(26, 26, 26, 0.65);
    font-weight: 300;
  }

  @media (max-width: 968px) {
    .product-sustainability__content {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-sustainability {
      padding: 60px var(--spacing-md);
    }

    .product-sustainability__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .product-sustainability__content {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .sustainability-story,
    .environmental-impact,
    .packaging-info {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Sustainability",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Sustainability & Impact"
    },
    {
      "type": "richtext",
      "id": "farmer_story",
      "label": "Farmer Partnership Story"
    },
    {
      "type": "richtext",
      "id": "environmental_impact",
      "label": "Environmental Impact Information"
    },
    {
      "type": "richtext",
      "id": "packaging_info",
      "label": "Packaging Information"
    }
  ],
  "presets": [
    {
      "name": "Product Sustainability"
    }
  ]
}
{% endschema %}
