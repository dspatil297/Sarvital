          "step": 1,
          "default": 5
        },
        {
          "type": "richtext",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "text",
          "id": "review_date",
          "label": "Review Date",
          "default": "2 weeks ago"
        },
        {
          "type": "checkbox",
          "id": "verified_purchase",
