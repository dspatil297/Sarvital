  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_rating_summary",
      "label": "Show Rating Summary",
      "default": true
    },
    {
      "type": "text",
      "id": "average_rating",
      "label": "Average Rating",
      "default": "4.8",
      "info": "Number between 0 and 5"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "127"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
