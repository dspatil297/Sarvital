{% comment %}
  Product Reviews Section
{% endcomment %}

<section class="product-reviews">
  <div class="product-reviews__container">
    {% if section.settings.title != blank %}
      <h2 class="product-reviews__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.show_rating_summary %}
      <div class="product-reviews__summary">
        <div class="rating-summary">
          <div class="rating-summary__average">
            <span class="rating-summary__number">{{ section.settings.average_rating | default: "4.8" }}</span>
            <div class="rating-summary__stars">
              {% assign rating = section.settings.average_rating | default: 4.8 | times: 1 %}
              {% assign rating_floor = rating | floor %}
              {% assign next_star = rating_floor | plus: 1 %}
              {% assign rating_decimal = rating | minus: rating_floor %}
              {% for i in (1..5) %}
                {% if i <= rating_floor %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                  </svg>
                {% elsif i == next_star and rating_decimal >= 0.5 %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor" clip-path="inset(0 50% 0 0)"/>
                  </svg>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>
            <span class="rating-summary__count">Based on {{ section.settings.review_count | default: "127" }} reviews</span>
          </div>
        </div>
      </div>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="product-reviews__list">
        {% for block in section.blocks %}
          <div class="review-card" {{ block.shopify_attributes }}>
            <div class="review-card__header">
              <div class="review-card__author">
                <div class="review-card__avatar">
                  {% if block.settings.customer_initials != blank %}
                    {{ block.settings.customer_initials }}
                  {% else %}
                    {{ block.settings.customer_name | slice: 0 | upcase }}
                  {% endif %}
                </div>
                <div class="review-card__info">
                  <div class="review-card__name">{{ block.settings.customer_name | default: "Customer" }}</div>
                  {% if block.settings.verified_purchase %}
                    <span class="review-card__verified">Verified Purchase</span>
                  {% endif %}
                </div>
              </div>
              <div class="review-card__rating">
                {% assign rating = block.settings.rating | default: 5 | times: 1 %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                  {% else %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            
            {% if block.settings.review_text != blank %}
              <div class="review-card__text">
                {{ block.settings.review_text }}
              </div>
            {% endif %}
            
            {% if block.settings.review_date != blank %}
              <div class="review-card__date">
                {{ block.settings.review_date }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if section.settings.show_review_form %}
      <div class="product-reviews__form">
        <button type="button" class="btn btn-outline" data-open-review-form>
          Write a Review
        </button>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-reviews {
    width: 100%;
    max-width: 100%;
    padding: var(--spacing-5xl) var(--spacing-lg);
    background: linear-gradient(180deg, var(--white) 0%, rgba(250, 250, 250, 0.5) 50%, var(--white) 100%);
    box-sizing: border-box;
  }

  .product-reviews__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-reviews__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: clamp(36px, 4.5vw, 56px);
    font-weight: 900;
    background: linear-gradient(135deg, var(--forest-green) 0%, var(--sage-green) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-4xl);
    letter-spacing: -0.02em;
    line-height: 1.2;
    padding: 10px;
    margin-top: var(--spacing-2xl);
  }

  .product-reviews__summary {
    margin-bottom: var(--spacing-4xl);
  }

  .rating-summary {
    text-align: center;
    padding: var(--spacing-2xl);
    background: linear-gradient(135deg, rgba(74, 124, 44, 0.05) 0%, rgba(212, 175, 55, 0.05) 100%);
    border-radius: var(--radius-xl);
    border: 2px solid rgba(74, 124, 44, 0.1);
  }

  .rating-summary__average {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .rating-summary__number {
    font-family: var(--font-heading);
    font-size: clamp(48px, 6vw, 72px);
    font-weight: 900;
    color: var(--gold);
    line-height: 1;
  }

  .rating-summary__stars {
    display: flex;
    gap: var(--spacing-xs);
    color: var(--gold);
  }

  .rating-summary__count {
    font-size: var(--body-normal);
    color: var(--text);
  }

  .product-reviews__list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-4xl);
  }

  .review-card {
    background: var(--white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 20px rgba(45, 80, 22, 0.08);
    border-left: 4px solid var(--sage-green);
  }

  .review-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .review-card__author {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .review-card__avatar {
    width: 50px;
    height: 50px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, var(--sage-green) 0%, var(--gold) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-weight: 700;
    font-size: var(--body-large);
  }

  .review-card__info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .review-card__name {
    font-weight: 700;
    color: var(--forest-green);
    font-size: var(--body-normal);
  }

  .review-card__verified {
    font-size: var(--body-small);
    color: var(--sage-green);
    font-weight: 600;
  }

  .review-card__rating {
    display: flex;
    gap: 2px;
    color: var(--gold);
  }

  .review-card__text {
    font-size: var(--body-normal);
    line-height: 1.7;
    color: var(--text);
    margin-bottom: var(--spacing-md);
  }

  .review-card__date {
    font-size: var(--body-small);
    color: #999;
  }

  .product-reviews__form {
    text-align: center;
    padding-top: var(--spacing-xl);
    border-top: 2px solid rgba(74, 124, 44, 0.1);
  }

  @media (max-width: 768px) {
    .review-card__header {
      flex-direction: column;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_rating_summary",
      "label": "Show Rating Summary",
      "default": true
    },
    {
      "type": "text",
      "id": "average_rating",
      "label": "Average Rating",
      "default": "4.8",
      "info": "Number between 0 and 5"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "127"
    },
    {
      "type": "checkbox",
      "id": "show_review_form",
      "label": "Show Review Form Button",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name",
          "default": "Customer Name"
        },
        {
          "type": "text",
          "id": "customer_initials",
          "label": "Customer Initials",
          "info": "Leave blank to use first letter of name"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "richtext",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "text",
          "id": "review_date",
          "label": "Review Date",
          "default": "2 weeks ago"
        },
        {
          "type": "checkbox",
          "id": "verified_purchase",
          "label": "Verified Purchase",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Reviews",
