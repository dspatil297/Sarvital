{% comment %}
  Product Reviews Section - Minimalist Design
{% endcomment %}

<section class="product-reviews">
  <div class="product-reviews__container">
    {% if section.settings.title != blank %}
      <h2 class="product-reviews__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.show_rating_summary %}
      <div class="product-reviews__summary">
        <div class="rating-summary">
          <div class="rating-summary__average">
            <span class="rating-summary__number">{{ section.settings.average_rating | default: "4.8" }}</span>
            <div class="rating-summary__stars">
              {% assign rating = section.settings.average_rating | default: 4.8 | times: 1 %}
              {% assign rating_floor = rating | floor %}
              {% assign next_star = rating_floor | plus: 1 %}
              {% assign rating_decimal = rating | minus: rating_floor %}
              {% for i in (1..5) %}
                {% if i <= rating_floor %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                  </svg>
                {% elsif i == next_star and rating_decimal >= 0.5 %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor" clip-path="inset(0 50% 0 0)"/>
                  </svg>
                {% else %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>
            <span class="rating-summary__count">Based on {{ section.settings.review_count | default: "127" }} reviews</span>
          </div>
        </div>
      </div>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="product-reviews__list">
        {% for block in section.blocks %}
          <div class="review-card" {{ block.shopify_attributes }}>
            <div class="review-card__header">
              <div class="review-card__author">
                <div class="review-card__avatar">
                  {% if block.settings.customer_initials != blank %}
                    {{ block.settings.customer_initials }}
                  {% else %}
                    {{ block.settings.customer_name | slice: 0 | upcase }}
                  {% endif %}
                </div>
                <div class="review-card__info">
                  <div class="review-card__name">{{ block.settings.customer_name | default: "Customer" }}</div>
                  {% if block.settings.verified_purchase %}
                    <span class="review-card__verified">Verified Purchase</span>
                  {% endif %}
                </div>
              </div>
              <div class="review-card__rating">
                {% assign rating = block.settings.rating | default: 5 | times: 1 %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                  {% else %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            
            {% if block.settings.review_text != blank %}
              <div class="review-card__text">
                {{ block.settings.review_text }}
              </div>
            {% endif %}
            
            {% if block.settings.review_date != blank %}
              <div class="review-card__date">
                {{ block.settings.review_date }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-reviews {
    width: 100%;
    max-width: 100%;
    padding: 80px var(--spacing-lg);
    background: var(--white);
    box-sizing: border-box;
  }

  .product-reviews__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .product-reviews__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 300;
    color: var(--text);
    margin-bottom: 50px;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .product-reviews__summary {
    margin-bottom: 50px;
  }

  .rating-summary {
    text-align: center;
    padding: 40px;
    background: var(--bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .rating-summary__average {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .rating-summary__number {
    font-family: var(--font-heading);
    font-size: 56px;
    font-weight: 300;
    color: var(--gold);
    line-height: 1;
  }

  .rating-summary__stars {
    display: flex;
    gap: 4px;
    color: var(--gold);
  }

  .rating-summary__count {
    font-size: 15px;
    color: rgba(26, 26, 26, 0.6);
    font-weight: 300;
  }

  .product-reviews__list {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .review-card {
    background: var(--bg);
    padding: 32px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .review-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .review-card__author {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .review-card__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--forest-green);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-weight: 600;
    font-size: 18px;
  }

  .review-card__info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .review-card__name {
    font-weight: 600;
    color: var(--forest-green);
    font-size: 16px;
  }

  .review-card__verified {
    font-size: 13px;
    color: var(--sage-green);
    font-weight: 400;
  }

  .review-card__rating {
    display: flex;
    gap: 2px;
    color: var(--gold);
  }

  .review-card__text {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(26, 26, 26, 0.65);
    margin-bottom: 16px;
    font-weight: 300;
  }

  .review-card__date {
    font-size: 13px;
    color: rgba(26, 26, 26, 0.5);
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .product-reviews {
      padding: 60px var(--spacing-md);
    }

    .product-reviews__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .rating-summary {
      padding: 32px 24px;
    }

    .rating-summary__number {
      font-size: 48px;
    }

    .review-card {
      padding: 24px;
    }

    .review-card__header {
      flex-direction: column;
    }
  }
{% endstylesheet %}

{% schema %}
