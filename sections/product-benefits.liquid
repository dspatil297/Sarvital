{% comment %}
  Product Benefits Section - Minimalist Design
{% endcomment %}

<section class="product-benefits">
  <div class="product-benefits__container">
    {% if section.settings.title != blank %}
      <h2 class="product-benefits__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="product-benefits__grid">
        {% for block in section.blocks %}
          <div class="product-benefit" {{ block.shopify_attributes }}>
            {% if block.settings.icon_name != blank %}
              <div class="product-benefit__icon">
                {% render 'icon', name: block.settings.icon_name %}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="product-benefit__title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="product-benefit__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-benefits {
    width: 100%;
    max-width: 100%;
    padding: 80px var(--spacing-lg);
    background: var(--bg);
    box-sizing: border-box;
  }

  .product-benefits__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-benefits__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 300;
    color: var(--text);
    margin-bottom: 60px;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .product-benefits__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .product-benefit {
    text-align: center;
    padding: 40px 30px;
    background: var(--white);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .product-benefit:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(45, 80, 22, 0.1);
    border-color: var(--sage-green);
  }

  .product-benefit__icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(74, 124, 44, 0.08);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .product-benefit__icon svg {
    width: 28px;
    height: 28px;
    color: var(--forest-green);
  }

  .product-benefit:hover .product-benefit__icon {
    background: var(--forest-green);
  }

  .product-benefit:hover .product-benefit__icon svg {
    color: var(--white);
  }

  .product-benefit__title {
    font-family: var(--font-heading);
    font-size: 20px;
    font-weight: 600;
    color: var(--forest-green);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .product-benefit__description {
    font-size: 15px;
    color: rgba(26, 26, 26, 0.65);
    line-height: 1.6;
    margin: 0;
    font-weight: 300;
  }

  @media (max-width: 968px) {
    .product-benefits__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-benefits {
      padding: 60px var(--spacing-md);
    }

    .product-benefits__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .product-benefits__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .product-benefit {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

