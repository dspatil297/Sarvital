          <div class="contact-info-card__content">
            {{ section.settings.support_hours }}
          </div>
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.show_social %}
      <div class="contact-info__social">
        <h3 class="contact-info__social-title">Follow Us</h3>
