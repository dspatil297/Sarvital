{% comment %}
  Hero Carousel – Background image carousel with static foreground content.
  Merchants manage slides via Theme Customizer (add/remove/reorder blocks).
{% endcomment %}

{%- liquid
  assign slide_blocks = section.blocks | where: 'type', 'slide'
  assign has_slides = false
  for block in slide_blocks
    if block.settings.image != blank
      assign has_slides = true
      break
    endif
  endfor
-%}

<section
  class="hero-carousel"
  id="hero-carousel-{{ section.id }}"
  role="region"
  aria-label="{{ section.settings.heading | default: 'Hero carousel' }}"
  data-section-id="{{ section.id }}"
  data-autoplay-speed="{{ section.settings.carousel_speed | times: 1000 }}"
  data-transition-duration="{{ section.settings.transition_duration }}"
  data-paused="false"
>
  {%- comment -%} Background carousel – loop over slide blocks {%- endcomment -%}
  <div class="hero-carousel__backgrounds" aria-hidden="true">
    {%- if slide_blocks.size > 0 -%}
      {%- for block in slide_blocks -%}
        {%- if block.settings.image != blank -%}
          <div
            class="hero-carousel__slide{% if forloop.first %} hero-carousel__slide--active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <img
              src="{{ block.settings.image | image_url: width: 1920 }}"
              srcset="
                {{ block.settings.image | image_url: width: 960 }} 960w,
                {{ block.settings.image | image_url: width: 1280 }} 1280w,
                {{ block.settings.image | image_url: width: 1920 }} 1920w,
                {{ block.settings.image | image_url: width: 2560 }} 2560w
              "
              sizes="100vw"
              alt="{{ block.settings.image.alt | default: '' }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              fetchpriority="{% if forloop.first %}high{% else %}low{% endif %}"
            >
          </div>
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}
    {%- unless has_slides -%}
      <div class="hero-carousel__slide hero-carousel__slide--active hero-carousel__slide--placeholder">
        <span class="hero-carousel__placeholder-text">{{ 'sections.hero_carousel.add_slides' | t | default: 'Add slides in Theme Customizer' }}</span>
      </div>
    {%- endunless -%}
  </div>

  <div
    class="hero-carousel__overlay"
    style="--overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    aria-hidden="true"
  ></div>

  {%- comment -%} Static foreground content {%- endcomment -%}
  <div class="hero-carousel__content">
    <div class="hero-carousel__text">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-carousel__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="hero-carousel__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
      {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-carousel__btn btn btn-primary btn-large">
          <span>{{ section.settings.button_text }}</span>
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {%- endif -%}
    </div>

    {%- if slide_blocks.size > 1 -%}
      <div class="hero-carousel__controls" role="group" aria-label="{{ 'sections.hero_carousel.carousel_controls' | t | default: 'Carousel controls' }}">
        <button
          type="button"
          class="hero-carousel__btn-prev"
          aria-label="{{ 'sections.hero_carousel.previous_slide' | t | default: 'Previous slide' }}"
          data-action="prev"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button
          type="button"
          class="hero-carousel__btn-next"
          aria-label="{{ 'sections.hero_carousel.next_slide' | t | default: 'Next slide' }}"
          data-action="next"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="hero-carousel__dots" role="tablist" aria-label="{{ 'sections.hero_carousel.slide_dots' | t | default: 'Slide navigation' }}">
          {%- for block in slide_blocks -%}
            {%- if block.settings.image != blank -%}
              <button
                type="button"
                class="hero-carousel__dot{% if forloop.first %} hero-carousel__dot--active{% endif %}"
                role="tab"
                aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                aria-label="{{ 'sections.hero_carousel.slide_label' | t: index: forloop.index, total: slide_blocks.size | default: 'Slide ' | append: forloop.index }}"
                data-slide-index="{{ forloop.index0 }}"
              ></button>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>

  {%- if slide_blocks.size > 1 -%}
    <div class="hero-carousel__pause-notice visually-hidden" data-pause-notice aria-live="polite"></div>
  {%- endif -%}
</section>

{% stylesheet %}
  .hero-carousel {
    position: relative;
    width: 100%;
    height: 90vh;
    min-height: 500px;
    max-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .hero-carousel__backgrounds {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-carousel__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity var(--transition-duration, 800ms) ease-in-out;
    pointer-events: none;
  }

  .hero-carousel__slide--active {
    opacity: 1;
    z-index: 1;
  }

  .hero-carousel__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    vertical-align: middle;
  }

  .hero-carousel__slide--placeholder {
    background: linear-gradient(135deg, #2d5016 0%, #4a7c2c 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-carousel__placeholder-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: clamp(14px, 2vw, 18px);
    padding: var(--spacing-lg, 24px);
    text-align: center;
  }

  .hero-carousel__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(45, 80, 22, 0.9) 0%,
      rgba(45, 80, 22, 0.7) 40%,
      rgba(74, 124, 44, 0.5) 100%
    );
    opacity: var(--overlay-opacity, 0.85);
    z-index: 2;
    pointer-events: none;
  }

  .hero-carousel__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1400px;
    padding: var(--spacing-xl, 32px) var(--spacing-lg, 24px);
    margin: 0 auto;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-height: 100%;
    box-sizing: border-box;
  }

  .hero-carousel__text {
    max-width: 700px;
    width: 100%;
  }

  .hero-carousel__heading {
    font-family: var(--font-heading, inherit);
    font-size: clamp(38px, 5.5vw, 72px);
    font-weight: 700;
    color: var(--white, #fff);
    margin: 0 0 var(--spacing-md, 16px);
    line-height: 1.2;
    letter-spacing: -0.02em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-carousel__subheading {
    font-size: clamp(18px, 2.2vw, 24px);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.95);
    margin: 0 0 var(--spacing-lg, 24px);
    line-height: 1.7;
    max-width: 600px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-carousel__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm, 8px);
    background: linear-gradient(135deg, var(--forest-green, #2d5016) 0%, var(--sage-green, #4a7c2c) 50%, var(--forest-green, #2d5016) 100%);
    color: var(--white, #fff);
    border: none;
    padding: var(--spacing-md, 16px) var(--spacing-2xl, 32px);
    font-weight: 600;
    font-size: clamp(15px, 1.4vw, 18px);
    text-decoration: none;
    border-radius: var(--radius-full, 9999px);
    box-shadow: 0 8px 30px rgba(74, 124, 44, 0.5);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .hero-carousel__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(74, 124, 44, 0.6);
    color: var(--white, #fff);
  }

  .hero-carousel__controls {
    position: absolute;
    bottom: var(--spacing-xl, 32px);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: var(--spacing-md, 16px);
    z-index: 4;
  }

  .hero-carousel__btn-prev,
  .hero-carousel__btn-next {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.15);
    color: var(--white, #fff);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, border-color 0.2s, transform 0.2s;
  }

  .hero-carousel__btn-prev:hover,
  .hero-carousel__btn-next:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.8);
    transform: scale(1.05);
  }

  .hero-carousel__btn-prev:focus-visible,
  .hero-carousel__btn-next:focus-visible {
    outline: 2px solid var(--white, #fff);
    outline-offset: 2px;
  }

  .hero-carousel__dots {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm, 8px);
  }

  .hero-carousel__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.6);
    background: transparent;
    cursor: pointer;
    padding: 0;
    transition: background 0.2s, transform 0.2s;
  }

  .hero-carousel__dot:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  .hero-carousel__dot--active {
    background: var(--white, #fff);
    transform: scale(1.2);
  }

  .hero-carousel__dot:focus-visible {
    outline: 2px solid var(--white, #fff);
    outline-offset: 2px;
  }

  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  @media (max-width: 768px) {
    .hero-carousel {
      height: 85vh;
      min-height: 450px;
      max-height: 700px;
    }

    .hero-carousel__content {
      padding: var(--spacing-xl, 32px) var(--spacing-md, 16px);
      text-align: center;
      align-items: center;
    }

    .hero-carousel__text {
      max-width: 100%;
    }

    .hero-carousel__heading {
      font-size: clamp(32px, 8vw, 48px);
    }

    .hero-carousel__subheading {
      font-size: clamp(16px, 4vw, 20px);
      margin-left: auto;
      margin-right: auto;
    }

    .hero-carousel__controls {
      bottom: var(--spacing-lg, 24px);
    }

    .hero-carousel__btn-prev,
    .hero-carousel__btn-next {
      width: 44px;
      height: 44px;
    }
  }

  @media (max-width: 480px) {
    .hero-carousel {
      height: 80vh;
      min-height: 400px;
      max-height: 600px;
    }

    .hero-carousel__heading {
      font-size: clamp(28px, 7vw, 40px);
    }

    .hero-carousel__subheading {
      font-size: clamp(14px, 3.5vw, 18px);
    }

    .hero-carousel__btn {
      width: 100%;
      justify-content: center;
      min-height: 52px;
    }
  }
{% endstylesheet %}

<script>
  (function () {
    const section = document.getElementById('hero-carousel-{{ section.id }}');
    if (!section) return;

    const slides = Array.from(section.querySelectorAll('.hero-carousel__slide:not(.hero-carousel__slide--placeholder)'));
    const dots = Array.from(section.querySelectorAll('.hero-carousel__dot'));
    const btnPrev = section.querySelector('[data-action="prev"]');
    const btnNext = section.querySelector('[data-action="next"]');
    const pauseNotice = section.querySelector('[data-pause-notice]');

    if (slides.length <= 1) return;

    const speed = parseInt(section.dataset.autoplaySpeed, 10) || 5000;
    const duration = parseInt(section.dataset.transitionDuration, 10) || 800;
    section.style.setProperty('--transition-duration', duration + 'ms');

    let currentIndex = 0;
    let timer = null;
    let isPaused = false;

    function goToSlide(index) {
      index = ((index % slides.length) + slides.length) % slides.length;
      currentIndex = index;

      slides.forEach(function (slide, i) {
        slide.classList.toggle('hero-carousel__slide--active', i === index);
      });
      dots.forEach(function (dot, i) {
        dot.classList.toggle('hero-carousel__dot--active', i === index);
        dot.setAttribute('aria-selected', i === index);
      });
    }

    function next() {
      goToSlide(currentIndex + 1);
    }

    function prev() {
      goToSlide(currentIndex - 1);
    }

    function startAutoplay() {
      if (timer) clearInterval(timer);
      if (section.dataset.paused === 'true') return;
      timer = setInterval(next, speed);
    }

    function stopAutoplay() {
      if (timer) {
        clearInterval(timer);
        timer = null;
      }
    }

    function setPaused(paused) {
      isPaused = paused;
      section.dataset.paused = paused ? 'true' : 'false';
      if (paused) {
        stopAutoplay();
        if (pauseNotice) pauseNotice.textContent = 'Carousel paused. Use previous/next or dots to navigate.';
      } else {
        if (pauseNotice) pauseNotice.textContent = '';
        startAutoplay();
      }
    }

    section.addEventListener('mouseenter', function () {
      setPaused(true);
    });
    section.addEventListener('mouseleave', function () {
      setPaused(false);
    });
    section.addEventListener('focusin', function () {
      setPaused(true);
    });
    section.addEventListener('focusout', function () {
      if (!section.contains(document.activeElement)) setPaused(false);
    });

    document.addEventListener('keydown', function (e) {
      if (!section.contains(document.activeElement)) return;
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        prev();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        next();
      }
    });

    if (btnPrev) btnPrev.addEventListener('click', function () { prev(); startAutoplay(); });
    if (btnNext) btnNext.addEventListener('click', function () { next(); startAutoplay(); });

    dots.forEach(function (dot, i) {
      dot.addEventListener('click', function () {
        goToSlide(i);
        startAutoplay();
      });
      dot.addEventListener('keydown', function (e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          goToSlide(i);
          startAutoplay();
        }
      });
    });

    startAutoplay();
  })();
</script>

