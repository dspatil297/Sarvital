{% comment %}
  Product Quality & Certifications Section - Minimalist Design
{% endcomment %}

<section class="product-quality">
  <div class="product-quality__container">
    {% if section.settings.title != blank %}
      <h2 class="product-quality__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="product-quality__badges">
        {% for block in section.blocks %}
          <div class="quality-badge-card" {{ block.shopify_attributes }}>
            {% if block.settings.icon_name != blank %}
              <div class="quality-badge-card__icon">
                {% render 'icon', name: block.settings.icon_name %}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="quality-badge-card__title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="quality-badge-card__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-quality {
    width: 100%;
    max-width: 100%;
    padding: 80px var(--spacing-lg);
    background: var(--white);
    box-sizing: border-box;
  }

  .product-quality__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-quality__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 48px;
    font-weight: 300;
    color: var(--text);
    margin-bottom: 60px;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .product-quality__badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .quality-badge-card {
    text-align: center;
    padding: 40px 30px;
    background: var(--bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .quality-badge-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(45, 80, 22, 0.1);
    border-color: var(--sage-green);
  }

  .quality-badge-card__icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(74, 124, 44, 0.08);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .quality-badge-card__icon svg {
    width: 28px;
    height: 28px;
    color: var(--forest-green);
  }

  .quality-badge-card:hover .quality-badge-card__icon {
    background: var(--forest-green);
  }

  .quality-badge-card:hover .quality-badge-card__icon svg {
    color: var(--white);
  }

  .quality-badge-card__title {
    font-family: var(--font-heading);
    font-size: 20px;
    font-weight: 600;
    color: var(--forest-green);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .quality-badge-card__description {
    font-size: 15px;
    color: rgba(26, 26, 26, 0.65);
    line-height: 1.6;
    margin: 0;
    font-weight: 300;
  }

  @media (max-width: 968px) {
    .product-quality__badges {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-quality {
      padding: 60px var(--spacing-md);
    }

    .product-quality__title {
      font-size: 36px;
      margin-bottom: 40px;
    }

    .product-quality__badges {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .quality-badge-card {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Quality",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Quality & Certifications"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Quality Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            {
              "value": "lab-test",
              "label": "Lab Test"
            },
            {
              "value": "certified",
              "label": "Certified"
            },
            {
              "value": "organic",
              "label": "Organic"
            },
            {
              "value": "premium",
              "label": "Premium"
            }
          ],
          "default": "lab-test"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Lab Tested"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Every batch is tested in certified laboratories."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Quality",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon_name": "lab-test",
            "title": "Lab Tested",
            "description": "Every batch is tested in certified laboratories."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon_name": "certified",
            "title": "Certified Organic",
            "description": "Certified organic ingredients from trusted suppliers."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon_name": "premium",
            "title": "Premium Quality",
            "description": "Rigorous quality control ensures consistent standards."
          }
        }
      ]
    }
  ]
}
{% endschema %}
