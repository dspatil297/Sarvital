  "name": "Product Ingredients",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Ingredients"
    }
  ],
  "presets": [
    {
      "name": "Product Ingredients"
    }
  ]
}
{% endschema %}

