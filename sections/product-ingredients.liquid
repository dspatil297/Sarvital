{% comment %}
  Product Ingredients Section
  Displays ingredients from custom.ingredients metafield
  Separate section for better conversions - always visible
{% endcomment %}

<section class="product-ingredients">
  <div class="product-ingredients__container">
    {% if section.settings.title != blank %}
      <h2 class="product-ingredients__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% assign ingredients = product.metafields.custom.ingredients %}
    <div class="ingredients-card">
      <h3 class="ingredients-card__heading">Ingredients</h3>
      
      {% if ingredients != blank %}
        <div class="ingredients-card__content">
          {% comment %} Check if it's a list metafield (array) {% endcomment %}
          {% if ingredients.first %}
            {% comment %} It's a list metafield - render directly {% endcomment %}
            <ul class="ingredients-card__list">
              {% for ingredient in ingredients %}
                <li class="ingredients-card__item">{{ ingredient }}</li>
              {% endfor %}
            </ul>
          {% else %}
            {% comment %} It might be a JSON string - check and parse {% endcomment %}
            {% assign ingredients_string = ingredients | string %}
            {% assign has_brackets = false %}
            {% if ingredients_string contains '[' %}
              {% assign has_brackets = true %}
            {% endif %}
            {% if has_brackets %}
              {% comment %} It's a JSON string - parse with JavaScript {% endcomment %}
              <ul class="ingredients-card__list" id="ingredients-list" data-ingredients-data="{{ ingredients_string | escape }}"></ul>
              <script>
                (function() {
                  var listEl = document.getElementById('ingredients-list');
                  if (!listEl) return;
                  var data = listEl.getAttribute('data-ingredients-data');
                  if (!data) return;
                  
                  try {
                    var dataString = data.replace(/&quot;/g, '"').replace(/&#39;/g, "'").replace(/&amp;/g, '&').trim();
                    var items = JSON.parse(dataString);
                    
                    if (Array.isArray(items) && items.length > 0) {
                      var html = '';
                      items.forEach(function(item) {
                        if (typeof item === 'string' && item.trim() !== '') {
                          html += '<li class="ingredients-card__item">' + item.trim() + '</li>';
                        }
                      });
                      listEl.innerHTML = html;
                    }
                  } catch(e) {
                    try {
                      var match = data.match(/\[(.*?)\]/);
                      if (match && match[1]) {
                        var items = match[1].split(',').map(function(item) {
                          return item.trim().replace(/^["']+|["']+$/g, '');
                        });
                        var html = '';
                        items.forEach(function(item) {
                          if (item.trim() !== '') {
                            html += '<li class="ingredients-card__item">' + item.trim() + '</li>';
                          }
                        });
                        listEl.innerHTML = html;
                      }
                    } catch(e2) {
                      listEl.innerHTML = '<li class="ingredients-card__item" style="color: rgba(26, 26, 26, 0.5); font-style: italic;">Error parsing ingredients</li>';
                    }
                  }
                })();
              </script>
            {% else %}
              {% comment %} It's plain text - display as-is {% endcomment %}
              <div class="ingredients-card__text">
                {{ ingredients }}
              </div>
            {% endif %}
          {% endif %}
        </div>
      {% else %}
        <p class="ingredients-card__empty">
          No ingredients information available. Please add ingredients in product metafields (custom.ingredients).
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .product-ingredients {
    width: 100%;
    padding: 60px 40px;
    background: var(--bg);
    box-sizing: border-box;
  }

  .product-ingredients__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .product-ingredients__title {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 40px;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .ingredients-card {
    background: var(--white);
    padding: 40px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .ingredients-card__heading {
    font-family: var(--font-heading);
    font-size: 24px;
    color: var(--forest-green);
    margin-bottom: 24px;
    font-weight: 600;
  }

  .ingredients-card__content {
    font-size: 15px;
    line-height: 1.8;
    color: rgba(26, 26, 26, 0.8);
    font-weight: 300;
  }

  .ingredients-card__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredients-card__item {
    padding: 12px 0;
    padding-left: 24px;
    border-bottom: 1px solid rgba(26, 26, 26, 0.08);
    position: relative;
    transition: padding-left 0.2s ease;
  }

  .ingredients-card__item:hover {
    padding-left: 32px;
  }

  .ingredients-card__item:last-child {
    border-bottom: none;
  }

  .ingredients-card__item::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--forest-green);
    font-weight: bold;
    font-size: 20px;
    line-height: 1.5;
  }

  .ingredients-card__text {
    line-height: 1.8;
  }

  .ingredients-card__empty {
    color: rgba(26, 26, 26, 0.5);
    font-style: italic;
    margin: 0;
  }

  .ingredients-card__loading {
    opacity: 0.6;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .product-ingredients {
      padding: 40px 20px;
    }

    .product-ingredients__title {
      font-size: 28px;
      margin-bottom: 32px;
    }

    .ingredients-card {
      padding: 28px 20px;
    }

    .ingredients-card__heading {
      font-size: 20px;
    }
  }
{% endstylesheet %}


