{% javascript %}
  (function() {
    'use strict';
    
    function parseIngredients() {
      const ingredientsList = document.getElementById('ingredients-list');
      if (!ingredientsList) return;
      
      const ingredientsData = ingredientsList.getAttribute('data-ingredients-data');
      if (!ingredientsData || ingredientsData.trim() === '') return;
      
      try {
        // Unescape HTML entities
        let dataString = ingredientsData
          .replace(/&quot;/g, '"')
          .replace(/&#39;/g, "'")
          .replace(/&amp;/g, '&')
          .replace(/&lt;/g, '<')
          .replace(/&gt;/g, '>')
          .trim();
        
        // Try JSON parse first
        let ingredientsArray;
        try {
          ingredientsArray = JSON.parse(dataString);
        } catch (jsonError) {
          // If JSON parse fails, try regex extraction
          const match = dataString.match(/\[(.*?)\]/);
          if (match && match[1]) {
            const items = match[1].split(',').map(function(item) {
              return item.trim().replace(/^["']+|["']+$/g, '');
            });
            ingredientsArray = items;
          } else {
            throw new Error('Could not parse');
          }
        }
        
        if (Array.isArray(ingredientsArray) && ingredientsArray.length > 0) {
          const fragment = document.createDocumentFragment();
          
          ingredientsArray.forEach(function(ingredient) {
            if (typeof ingredient === 'string' && ingredient.trim() !== '') {
              const listItem = document.createElement('li');
              listItem.className = 'ingredients-card__item';
              listItem.textContent = ingredient.trim();
              fragment.appendChild(listItem);
            }
          });
          
          ingredientsList.innerHTML = '';
          ingredientsList.appendChild(fragment);
        }
      } catch (e) {
        console.error('Error parsing ingredients:', e);
        ingredientsList.innerHTML = '<li class="ingredients-card__item"><span style="color: rgba(26, 26, 26, 0.5); font-style: italic;">Unable to parse ingredients data. Please check the metafield format.</span></li>';
      }
    }
    
    // Run immediately if DOM is ready, otherwise wait
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', parseIngredients);
    } else {
      // Use setTimeout to ensure DOM is fully rendered
      setTimeout(parseIngredients, 0);
    }
  })();
{% endjavascript %}

