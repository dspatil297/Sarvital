{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    /* ============================================
       SARVITAL DESIGN SYSTEM - CSS VARIABLES
       ============================================ */
    
    /* Font Families */
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    --font-heading: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-body: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    
    /* Primary Colors - Brand Palette */
    --forest-green: #2d5016;      /* Primary brand color - headers, nav, footer */
    --sage-green: #4a7c2c;        /* Secondary green - accents, hover states */
    --gold: #d4af37;              /* Accent color - CTAs, highlights, premium elements */
    
    /* Neutral Colors */
    --bg: #fafafa;                /* Background - main page background */
    --text: #1a1a1a;              /* Primary text - body copy, paragraphs */
    --white: #ffffff;             /* White - cards, sections, overlays */
    
    /* Semantic Color Usage */
    --primary-cta: var(--gold);
    --secondary-cta: var(--sage-green);
    --text-on-dark: var(--white);
    --text-on-light: var(--text);
    --border-color: #e0e0e0;
    --shadow-color: rgba(45, 80, 22, 0.1);
    
    /* Legacy Support (from settings) */
    --color-background: var(--bg);
    --color-foreground: var(--text);
    
    /* Typography Scale */
    --h1-size: 48px;              /* Hero titles */
    --h2-size: 36px;              /* Section titles */
    --h3-size: 28px;              /* Subsection titles */
    --h4-size: 22px;              /* Card titles */
    --h5-size: 18px;              /* Small headings */
    --body-large: 18px;           /* Lead paragraphs */
    --body-normal: 16px;          /* Standard text */
    --body-small: 14px;           /* Captions, labels */
    --body-xs: 12px;              /* Fine print */
    
    /* Spacing Scale */
    --spacing-xs: 6px;            /* Micro spacing - icons, badges */
    --spacing-sm: 12px;           /* Tight spacing - between related items */
    --spacing-md: 20px;           /* Standard spacing - card padding */
    --spacing-lg: 28px;           /* Medium spacing - section padding */
    --spacing-xl: 40px;           /* Large spacing - between sections */
    --spacing-2xl: 56px;          /* XL spacing - major sections */
    --spacing-3xl: 72px;          /* XXL spacing - page sections */
    --spacing-4xl: 96px;          /* XXXL spacing - hero sections */
    
    /* Layout */
    --page-width: {{ settings.max_page_width | default: '1200px' }};
    --page-margin: {{ settings.min_page_margin | default: 20 }}px;
    --container-max-width: 1200px;
    --container-padding: 20px;
    
    /* Border Radius */
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;
    --style-border-radius-inputs: {{ settings.input_corner_radius | default: 4 }}px;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(45, 80, 22, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(45, 80, 22, 0.1), 0 2px 4px -1px rgba(45, 80, 22, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(45, 80, 22, 0.1), 0 4px 6px -2px rgba(45, 80, 22, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(45, 80, 22, 0.1), 0 10px 10px -5px rgba(45, 80, 22, 0.04);
    
    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 350ms ease;
    
    /* Z-Index Scale */
    --z-dropdown: 1000;
    --z-sticky: 1020;
    --z-fixed: 1030;
    --z-modal-backdrop: 1040;
    --z-modal: 1050;
    --z-popover: 1060;
    --z-tooltip: 1070;
  }
  
  /* Mobile Typography Adjustments */
  @media (max-width: 768px) {
    :root {
      --h1-size: 32px;
      --h2-size: 28px;
      --h3-size: 24px;
      --h4-size: 20px;
      --container-padding: 20px;
    }
  }
  
  /* Tablet Adjustments */
  @media (min-width: 769px) and (max-width: 1024px) {
    :root {
      --container-padding: 40px;
    }
  }
  
  /* Desktop Adjustments */
  @media (min-width: 1025px) {
    :root {
      --container-padding: 60px;
    }
  }
{% endstyle %}
